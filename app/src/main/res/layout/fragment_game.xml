<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.screens.fragments.GameFragment">

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/purple_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="15:00"
        />

    <TextView
        android:id="@+id/tvSum"
        android:layout_width="144dp"
        android:layout_height="144dp"
        style="@style/QuestionTextStyle"
        android:layout_marginTop="32dp"
        android:background="@drawable/circle_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime"
        tools:text="7" />

    <TextView
        android:id="@+id/tvVisibleNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/QuestionTextStyle"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:background="@color/question"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/tvQuestion"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/tvSum"
        app:layout_constraintTop_toBottomOf="@+id/tvSum"
        tools:text="2"
        />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/QuestionTextStyle"
        android:background="@color/question"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="@+id/tvVisibleNum"
        app:layout_constraintEnd_toEndOf="@+id/tvSum"
        app:layout_constraintStart_toEndOf="@+id/tvVisibleNum"
        app:layout_constraintTop_toTopOf="@+id/tvVisibleNum"
        tools:text="\?"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tvOption1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvOption1" />

    <TextView
        android:id="@+id/tvOption1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/OptionTextStile"
        android:background="@color/option1"
        app:layout_constraintBottom_toTopOf="@+id/tvOption4"
        app:layout_constraintEnd_toStartOf="@+id/tvOption2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="1"
        />

    <TextView
        android:id="@+id/tvOption2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/OptionTextStile"
        android:background="@color/option2"
        app:layout_constraintBottom_toBottomOf="@+id/tvOption1"
        app:layout_constraintEnd_toStartOf="@+id/tvOption3"
        app:layout_constraintStart_toEndOf="@+id/tvOption1"
        app:layout_constraintTop_toTopOf="@+id/tvOption1"
        tools:text="2"
        />

    <TextView
        android:id="@+id/tvOption3"
        style="@style/OptionTextStile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/option3"
        app:layout_constraintBottom_toBottomOf="@+id/tvOption2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvOption2"
        app:layout_constraintTop_toTopOf="@+id/tvOption2"
        tools:text="3"
        />

    <TextView
        android:id="@+id/tvOption4"
        style="@style/OptionTextStile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/option4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvOption5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/tvOption1"
        tools:text="4"
        />

    <TextView
        android:id="@+id/tvOption5"
        style="@style/OptionTextStile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/option5"
        app:layout_constraintBottom_toBottomOf="@+id/tvOption4"
        app:layout_constraintEnd_toStartOf="@+id/tvOption6"
        app:layout_constraintStart_toEndOf="@+id/tvOption4"
        app:layout_constraintTop_toTopOf="@+id/tvOption4"
        tools:text="5"
        />

    <TextView
        android:id="@+id/tvOption6"
        style="@style/OptionTextStile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/option6"
        app:layout_constraintBottom_toBottomOf="@+id/tvOption5"
        app:layout_constraintEnd_toEndOf="@+id/tvOption3"
        app:layout_constraintStart_toEndOf="@+id/tvOption5"
        app:layout_constraintTop_toTopOf="@+id/tvOption5"
        tools:text="6"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/progressBar"
        app:layout_constraintEnd_toEndOf="@+id/tvQuestion"
        app:layout_constraintStart_toStartOf="@+id/tvVisibleNum"
        app:layout_constraintTop_toBottomOf="@+id/tvVisibleNum"
        tools:text="test"
        />

</androidx.constraintlayout.widget.ConstraintLayout>